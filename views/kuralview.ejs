<html>
    <head>
        <title>Kural</title>
        <link rel="stylesheet" type="text/css" href="C:\Users\ggnanasekar\Desktop\GIRI\MyThirukuralApp\Thirukurral\views\mystyles.css"/>
        <style>
            body
            {
                background-attachment: fixed;
                background-color: cadetblue;
            }
            #kural_border{
                border: 2px solid #bcffee;
                border-radius: 20px;
                background-color: lightblue;
                margin: 60px 150px 50px 80px;
                padding: 20px 30px 50px 50px;
                color : darkolivegreen;
                font-weight: bold;
            }
            #kural_number{
                padding: 10px 10px 20px 10px;
                font-size: 14px;
                font-weight: bold;
                color:green;
            }
            #first_line{
                padding-bottom: 10px;
                padding-left: 30px;
            }
            #second_line{
                padding-bottom: 10px;
                padding-left: 30px;
            }
            #description{
                padding-top: 20px;
                color : teal;

            }

        </style>
    </head>
    <body >
        <%for(i=0;i<data.length;i++){%>
        <div id="kural_border">
            <div id="kural_number"> குறள் : <%=data[i].Number%></div>
            <div id="first_line"><%=data[i].Line1%>            </div>
            <div id="second_line"><%=data[i].Line2%>            </div>
            <div id="description">Description : <%=data[i].Translation%></div>
        </div>
            <%}%>
    </body>
</html>